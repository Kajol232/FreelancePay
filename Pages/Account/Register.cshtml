@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>Register</h2>

<form method="post" asp-page-handler="Register">
    <div class="form-group">
        <label asp-for="RegisterUserViewModel.FullName">Full Name</label>
        <input asp-for="RegisterUserViewModel.FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RegisterUserViewModel.Email">Email</label>
        <input asp-for="RegisterUserViewModel.Email" class="form-control" type="email" />
    </div>

    <div class="form-group">
        <label asp-for="RegisterUserViewModel.RoleId">Select User Type</label>
        <select asp-for="RegisterUserViewModel.RoleId" asp-items="Model.Roles" class="form-control">
            </select>
    </div>

    <div class="form-group">
        <label asp-for="RegisterUserViewModel.UserName">Username</label>
        <input asp-for="RegisterUserViewModel.UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RegisterUserViewModel.AccountNumber">Account Number</label>
        <input asp-for="RegisterUserViewModel.AccountNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RegisterUserViewModel.BankCode">Bank</label>
        <select asp-for="RegisterUserViewModel.BankCode" asp-items="Model.Banks" class="form-control"></select>

    </div>

    <div class="form-group">
        <label asp-for="RegisterUserViewModel.Password">Password</label>
        <input asp-for="RegisterUserViewModel.Password" type="password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="RegisterUserViewModel.ConfirmPassword">Confirm Password</label>
        <input asp-for="RegisterUserViewModel.ConfirmPassword" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Register</button>
</form>